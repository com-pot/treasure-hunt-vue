{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false, // Template variables are validated in an undesirably strict manner
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],

    "baseUrl": ".",
    "paths": {
      "@custom/*": ["custom/*"],
      "@src/*": ["src/*"],
    },

    "skipLibCheck": true, // in @vueform/multiselect there is failing "... extends Vue" clause

  },
  "include": [
    "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue",
    "custom/**/*.ts", "custom/**/*.d.ts", "custom/**/*.vue",
    "types/**/*.d.ts",
  ],
}
